<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SuperAdmin.Activity.CompanyProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:id="@+id/support_btn"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="10dp"
                        card_view:cardBackgroundColor="@color/white"
                        card_view:cardElevation="2dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/company_cover_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:alpha="0.4"
                                android:scaleType="centerCrop"
                                android:src="@drawable/profile_bg" />

                            <!--<LinearLayout-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="match_parent"-->
                                <!--android:paddingBottom="15dp"-->
                                <!--android:gravity="center_horizontal"-->
                                <!--android:paddingTop="15dp">-->

                                <!--&lt;!&ndash;<de.hdodenhof.circleimageview.CircleImageView&ndash;&gt;-->
                                    <!--&lt;!&ndash;android:id="@+id/company_pfle_logo"&ndash;&gt;-->
                                    <!--&lt;!&ndash;android:layout_width="150dp"&ndash;&gt;-->
                                    <!--&lt;!&ndash;android:layout_height="match_parent"&ndash;&gt;-->
                                    <!--&lt;!&ndash;android:scaleType="centerCrop"&ndash;&gt;-->
                                    <!--&lt;!&ndash;android:transitionName="image_trans"&ndash;&gt;-->
                                    <!--&lt;!&ndash;app:civ_border_color="@color/light_black"&ndash;&gt;-->
                                    <!--&lt;!&ndash;app:civ_border_width="2dp" />&ndash;&gt;-->

                            <!--</LinearLayout>-->



                        </RelativeLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <ImageView
                    android:id="@+id/company_pfle_logo"
                    android:layout_width="150dp"
                    android:layout_marginTop="50dp"
                    android:scaleType="fitCenter"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/profile_icon"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:fontFamily="sans-serif-medium"
                        android:text="Company Profile"
                        android:textColor="@color/black"
                        android:textSize="@dimen/heading" />

                    <TextView
                        android:id="@+id/edit_click"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1.0"
                        android:fontFamily="sans-serif-medium"
                        android:text="Edit"
                        android:textAlignment="textEnd"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/activity_horizontal_margin" />

                </LinearLayout>

                <View
                    android:layout_width="50dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/gradient" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:id="@+id/support_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text="Company Name"
                            android:textColor="@color/light_white"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/cpcompany_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="sans-serif-medium"
                            android:text=""
                            android:textColor="@color/light_grey"
                            android:textSize="14dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/light_grey" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="sans-serif"
                            android:text="Year Of Establish"
                            android:textColor="@color/light_white"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/cpcompany_yoe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="sans-serif-medium"
                            android:text=""
                            android:textColor="@color/light_grey"
                            android:textSize="14dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/light_grey" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="sans-serif"
                            android:text="Company Reg No"
                            android:textColor="@color/light_white"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/cpcompany_regno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="sans-serif-medium"
                            android:text=""
                            android:textColor="@color/light_grey"
                            android:textSize="14dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/light_grey" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="sans-serif"
                            android:text="GST"
                            android:textColor="@color/light_white"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/cpcompany_gst"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="sans-serif-medium"
                            android:text=""
                            android:textColor="@color/light_grey"
                            android:textSize="14dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/light_grey" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="sans-serif"
                            android:text="HR Head Email"
                            android:textColor="@color/light_white"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/cpcompany_hr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="sans-serif-medium"
                            android:text=""
                            android:textColor="@color/light_grey"
                            android:textSize="14dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/light_grey" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="sans-serif"
                            android:text="Website"
                            android:textColor="@color/light_white"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/cpcompany_website"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="sans-serif-medium"
                            android:text=""
                            android:textColor="@color/light_grey"
                            android:textSize="14dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/light_grey" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="sans-serif"
                            android:text="Company Email"
                            android:textColor="@color/light_white"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/cpcompany_cemail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="sans-serif-medium"
                            android:text=""
                            android:textColor="@color/light_grey"
                            android:textSize="14dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/light_grey" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="sans-serif"
                            android:text="Company Phone No"
                            android:textColor="@color/light_white"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/cpcompany_cphoneno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="sans-serif-medium"
                            android:text=""
                            android:textColor="@color/light_grey"
                            android:textSize="14dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/light_grey" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="sans-serif"
                            android:text="Business type"
                            android:textColor="@color/light_white"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/cpcompany_business_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="sans-serif-medium"
                            android:text=""
                            android:textColor="@color/light_grey"
                            android:textSize="14dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/light_grey" />


                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/compny_prfle_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/gradient"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="Company Profile"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_size"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>
