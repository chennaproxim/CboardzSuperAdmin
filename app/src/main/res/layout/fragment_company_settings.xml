<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cboadz.app.cboardzsuperadmin.CompanyAdmin.Fragments.CompanySettingsFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/settings_list_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EFF3F6"
        android:textAlignment="center"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/dark_blue"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/dark_blue"
        app:tabTextColor="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_leave_type_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="top|left"
            android:layout_margin="@dimen/fab_margin"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="25dp"
            android:tint="@color/white"
            app:backgroundTint="@color/light_blue"
            app:layout_anchorGravity="bottom|right"
            app:srcCompat="@android:drawable/ic_input_add" />

        <android.support.v4.view.ViewPager
            android:id="@+id/settings_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        </android.support.v4.view.ViewPager>


    </RelativeLayout>


</LinearLayout>
