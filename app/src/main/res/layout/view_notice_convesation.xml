<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="7dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ntcview_conversation_companyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="head"
            android:textColor="@color/black"
            android:textSize="@dimen/content_size" />

        <TextView
            android:id="@+id/ntcview_conversation_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textAlignment="viewEnd"
            android:text="28-2-2017"
            android:layout_marginLeft="10dp"
            android:textColor="@color/light_black"
            android:textSize="@dimen/content_small_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/shape_bg_incoming_bubble"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ntcview_conversation_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="check"
            android:textColor="@color/white"
            android:textSize="@dimen/content_size" />

        <TextView
            android:id="@+id/ntcview_conversation_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="end"
            android:fontFamily="sans-serif-medium"
            android:text="12:09"
            android:textColor="@color/white_shade"
            android:textSize="@dimen/content_small_size" />

    </LinearLayout>

</LinearLayout>